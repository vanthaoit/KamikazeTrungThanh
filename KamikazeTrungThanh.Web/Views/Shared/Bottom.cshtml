@model IEnumerable<KamikazeTrungThanh.Web.Models.ProductCategoryViewModel>
<div class="recommend container">
    <h3 class="w3ls-title">Sản phẩm liên quan </h3>
    <link href="~/Assets/client/css/owl.carousel.css" rel="stylesheet" />
    <script src="~/Assets/client/js/owl.carousel.js"></script>
    <script>
                $(document).ready(function () {
                    $("#owl-demo5").owlCarousel({

                        autoPlay: 3000, //Set AutoPlay to 3 seconds

                        items: 4,
                        itemsDesktop: [640, 5],
                        itemsDesktopSmall: [414, 4],
                        navigation: true

                    });

                });
    </script>
    <div id="owl-demo5" class="owl-carousel">
        @foreach (var item in Model)
        {
            var Url= "/portfolio-"+item.Alias+"-"+item.ID+".html";
            <div class="item">
                <div class="glry-w3agile-grids agileits">
                    <div class="new-tag"><h6>new<br> HOT !!!</h6></div>
                    <a href="@Url"><img src="@item.Image" alt="img"></a>
                    <div class="view-caption agileits-w3layouts">
                        <h4><a href="@Url">@item.Name</a></h4>
                        
                        <br />
                        <a href="@Url" class="w3ls-cart"><i class="fa fa-list" aria-hidden="true"></i> Xem chi tiết</a>
                       
                    </div>
                </div>
            </div>
        }
       
    </div>
</div>

